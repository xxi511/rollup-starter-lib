{
    "compileOnSave": false,
    "compilerOptions": {
        "outDir": "./dist",
        "declaration": true,
        "declarationDir": "./dist",
        "target": "es5",
        "module": "es2015",
        "moduleResolution": "node",
        "sourceMap": true,
        "typeRoots": ["node_modules/@types"],
        "noImplicitAny": true,
        "allowJs": false,
        "lib": ["es2018", "dom"]
    },
    "include": ["./src/**/*"],
    "exclude": ["./node_modules"]
}
